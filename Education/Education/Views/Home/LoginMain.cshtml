@using Education.Models
@model LoginModel
@{
    ViewBag.Title = "LoginMain";
    Layout = "~/Views/Shared/_Login.cshtml";
}
<style>
	.Cahpe {

	}
</style>

@using (Html.BeginForm("LoginMain", "Home", FormMethod.Post))
{

	
	<div class="container">
		<div >
			@if(ViewBag.message!=""  || ViewBag.message != null)
			{
				<div class="alert-danger danger">
					<h4>@ViewBag.message</h4>
				</div>
			}
					</div>
			<div class="container ">
			    <div class="row-cols-2 " style="padding-top:50px;">
			        <div class="spContainer mx-auto">
				    <div class="card px-4 py-5 border-0 shadow" style="border:solid 1px;">
					    <center>

                        <div class="d-inline text-left mb-3">
						    <h3 class="font-weight-bold">تسجيل الدخول</h3>
						    <p>الرجاء ادخال اسم المستخدم وكلمة السر!!!</p>
					    </div>
					    <div class="d-inline text-center mb-0">
						    <div class="form-group mx-auto">
							    @Html.TextBoxFor(a => a.Username, new { @class = "form-control form-control-lg text-justify" })
                            </div>

                        </div>
                        <div class="d-inline text-center mb-3">
						    <div class="form-group mx-auto">
							    @Html.PasswordFor(a => a.Password, new { @class = "form-control form-control-lg text-justify" })
						    </div>
					    </div>
					    <div class="d-inline text-left mb-3">
						    <div class="form-group mx-auto">
							    <button class="btn btn-primary">ادخال</button>
							    @*<a class="small text-black-50 pl-2 ml-2 border-left" href="">Forgot Password ?</a>*@
						    </div>
					    </div>
	
                      </center>
                    			
				    </div>
			        </div>
		      </div>

            </div>
	</div>
}
